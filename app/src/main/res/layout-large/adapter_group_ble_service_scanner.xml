<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/little_padding_vertical"
    android:paddingBottom="@dimen/little_padding_vertical">

    <TextView
        android:id="@+id/scan_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingEnd="?android:attr/expandableListPreferredChildPaddingLeft"
    />

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
    />

    <TextView
        android:id="@+id/scan_service_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingEnd="?android:attr/expandableListPreferredChildPaddingLeft"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="monospace"
    />

</LinearLayout>