<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.projektorion.krzysztof.blesensortag.fragments.config.FragmentNotifyProfileConfigFragment"
    android:orientation="vertical"
    android:paddingTop="@dimen/little_padding_vertical"
    android:paddingBottom="@dimen/little_padding_vertical">



    <Switch
        android:text="@string/label_config_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_notification_state"
        android:textSize="14sp"
        android:textColor="@android:color/black"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
    />

    <Switch
        android:text="@string/label_config_measurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_measurement_state"
        android:textSize="14sp"
        android:textColor="@android:color/black"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/period_state_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="14sp"
            android:text="@string/label_config_period"
            android:textColor="@android:color/black"
        />

        <SeekBar
            android:id="@+id/seekbar_period_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_weight="6"
        />
    </LinearLayout>


</LinearLayout>
